<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ramostear.jbuilder.dao.TicketGroupDao">

	<resultMap type="com.ramostear.jbuilder.entity.TicketGroup" id="resultMap">
		<id column="id" property="id"/>
		<result column="name" property="name"/>
		<result column="description" property="description"/>
	</resultMap>
	

	<insert id="save" parameterType="com.ramostear.jbuilder.entity.TicketGroup" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
		insert into order_ticket_group
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="name != null">name,</if>
			<if test="description != null">description</if>
		</trim>
		<trim prefix="values(" suffix=")" suffixOverrides=",">
			<if test="name != null">#{name},</if>
			<if test="description != null">#{description}</if>
		</trim>
	</insert>
	
	<update id="update" parameterType="com.ramostear.jbuilder.entity.TicketGroup">
		update order_ticket_group
		<set>
			<if test="name != null">name=#{name},</if>
			<if test="description != null">description=#{description}</if>
		</set>
		where id = #{id}
	</update>
	
	<select id="size" resultType="Long">
		select count(*) from order_ticket_group
	</select>
	
	<delete id="delete" parameterType="Long">
		delete from order_ticket_group 
		where 
		id = #{id}
	</delete>

	<select id="findById" parameterType="Long" resultMap="resultMap">
		select * from order_ticket_group 
		where 
		id = #{id}
	</select>
	
	<select id="findAll"  resultMap="resultMap">
		select * from order_ticket_group
	</select>
	
	<select id="findByPage" resultMap="resultMap">
		select * from order_ticket_group 
		<if test="search != null and search!=''">
			where name like '%${search}%'
		</if>
		order by ${orderBy} 
		<if test="order == true">
			DESC
		</if>
		<if test="order == false">
			ASC
		</if>
		
		limit #{offset},#{size}
	</select>
	
</mapper>