<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ramostear.jbuilder.dao.TicketDao">

	<resultMap type="com.ramostear.jbuilder.entity.Ticket" id="resultMap">
		<id column="id" property="id"/>
		<result column="scenicId" property="scenicId"/>
		<result column="groupId" property="groupId"/>
		<result column="name" property="name"/>
		<result column="goodsCode" property="goodsCode"/>
		<result column="price" property="price"/>
		<result column="shopPrice" property="shopPrice"/>
		<result column="stock" property="stock"/>
		<result column="goodsType" property="goodsType"/>
		<result column="groupTickets" property="groupTickets"/>
		<result column="beginDate" property="beginDate"/>
		<result column="endDate" property="endDate"/>
		<result column="weekDate" property="weekDate"/>
		<result column="checkTime" property="checkTime"/>
		<result column="stopCheckTime" property="stopCheckTime"/>
		<result column="sellout" property="sellout"/>
		<result column="status" property="status"/>
		<result column="description" property="description"/>
		<association property="cover" column="id" select="findCover"/>
	</resultMap>

	<select id="findCover"  resultType="java.lang.String" parameterType="java.lang.Long">
		select attachmentUrl from order_ticket_attachment where ticketId=#{id} ORDER BY showOrder DESC LIMIT 0,1
	</select>

	<insert id="save" parameterType="com.ramostear.jbuilder.entity.Ticket" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
		insert into order_ticket
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="scenicId != null">scenicId,</if>
			<if test="groupId != null">groupId,</if>
			<if test="name != null">name,</if>
			<if test="goodsCode != null">goodsCode,</if>
			<if test="price != null">price,</if>
			<if test="shopPrice != null">shopPrice,</if>
			<if test="stock != null">stock,</if>
			<if test="goodsType != null">goodsType,</if>
			<if test="groupTickets != null">groupTickets,</if>
			<if test="beginDate != null">beginDate,</if>
			<if test="endDate != null">endDate,</if>
			<if test="weekDate != null">weekDate,</if>
			<if test="checkTime != null">checkTime,</if>
			<if test="stopCheckTime != null">stopCheckTime,</if>
			<if test="sellout != null">sellout,</if>
			<if test="status != null">status,</if>
			<if test="description != null">description</if>
		</trim>
		<trim prefix="values(" suffix=")" suffixOverrides=",">
			<if test="scenicId != null">#{scenicId},</if>
			<if test="groupId != null">#{groupId},</if>
			<if test="name != null">#{name},</if>
			<if test="goodsCode != null">#{goodsCode},</if>
			<if test="price != null">#{price},</if>
			<if test="shopPrice != null">#{shopPrice},</if>
			<if test="stock != null">#{stock},</if>
			<if test="goodsType != null">#{goodsType},</if>
			<if test="groupTickets != null">#{groupTickets},</if>
			<if test="beginDate != null">#{beginDate},</if>
			<if test="endDate != null">#{endDate},</if>
			<if test="weekDate != null">#{weekDate},</if>
			<if test="checkTime != null">#{checkTime},</if>
			<if test="stopCheckTime != null">#{stopCheckTime},</if>
			<if test="sellout != null">#{sellout},</if>
			<if test="status != null">#{status},</if>
			<if test="description != null">#{description}</if>
		</trim>
	</insert>	

	<update id="update" parameterType="com.ramostear.jbuilder.entity.Ticket">
		update order_ticket
		<set>
			<if test="scenicId != null">scenicId=#{scenicId},</if>
			<if test="groupId != null">groupId=#{groupId},</if>
			<if test="name != null">name=#{name},</if>
			<if test="goodsCode != null">goodsCode=#{goodsCode},</if>
			<if test="price != null">price=#{price},</if>
			<if test="shopPrice != null">shopPrice=#{shopPrice},</if>
			<if test="stock != null">stock=#{stock},</if>
			<if test="goodsType != null">goodsType=#{goodsType},</if>
			<if test="groupTickets != null">groupTickets=#{groupTickets},</if>
			<if test="beginDate != null">beginDate=#{beginDate},</if>
			<if test="endDate != null">endDate=#{endDate},</if>
			<if test="weekDate != null">weekDate=#{weekDate},</if>
			<if test="checkTime != null">checkTime=#{checkTime},</if>
			<if test="stopCheckTime != null">stopCheckTime=#{stopCheckTime},</if>
			<if test="sellout != null">sellout=#{sellout},</if>
			<if test="status != null">status=#{status},</if>
			<if test="description != null">description=#{description}</if>
		</set>
		where id = #{id}
	</update>

	<select id="size" resultType="Long">
		select count(*) from order_ticket
	</select>
	
	<select id="sizeMember" resultType="Long" parameterType="Long">
		select count(*) from order_ticket where groupId = #{groupId}
	</select>
	
	<select id="sizeSearch" resultType="String" parameterType="Long">
		select count(*) from order_ticket where name like '%#{name}%'
	</select>
	

	<delete id="delete" parameterType="Long">
		delete from order_ticket 
		where 
		id = #{id}
	</delete>

	<select id="findById" parameterType="Long" resultMap="resultMap">
		select * from order_ticket 
		where 
		id = #{id}
	</select>

	<select id="findAll"  resultMap="resultMap">
		select * from order_ticket
	</select>
	
	<select id="findTop5"  resultMap="resultMap">
		select * from order_ticket order by id  desc limit 5
	</select>
	

	<select id="findByPage" resultMap="resultMap">
		select * from order_ticket 
		order by ${orderBy} 
		<if test="order == true">
			DESC
		</if>
		<if test="order == false">
			ASC
		</if>
		limit #{offset},#{size}
	</select>
	
	<select id="findByPageMember" resultMap="resultMap">
		select * from order_ticket 
		<if test="groupId != null and groupId != ''">
			where groupId = ${groupId}
		</if>
		order by ${orderBy} 
		<if test="order == true">
			DESC
		</if>
		<if test="order == false">
			ASC
		</if>
		limit #{offset},#{size}
	</select>
	
	<select id="findByPageSearch" resultMap="resultMap">
		select * from order_ticket 
		<if test="name != null and name != ''">
			where name like '%${name}%'
		</if>
		order by ${orderBy} 
		<if test="order == true">
			DESC
		</if>
		<if test="order == false">
			ASC
		</if>
		limit #{offset},#{size}
	</select>
	
	
	

	<select id="findPageByCond" resultMap="resultMap">
		select t.id, t.scenicId, t.groupId, t.name, t.goodsCode, t.price, t.shopPrice, t.stock,
			t.goodsType, t.groupTickets, t.beginDate, t.endDate, t.weekDate, t.checkTime,
			t.stopCheckTime, t.sellout, t.status, t.description
		from order_ticket t, order_scenic_spot s
		where t.scenicId = s.id	
		<if test="goodsCode != null and goodsCode != ''">
			and goodsCode = #{goodsCode}
		</if>
		<if test="status > -1">
			and status = #{status}
		</if>
		<if test="ticketName != null and ticketName !=''">
			and t.name like '%${ticketName}%'
		</if>
		<if test="scenicName != null and scenicName != ''">
			and s.name like '%${scenicName}%'
		</if>
		<if test="orderBy != null">
			order by ${orderBy} 
		</if>
		<if test="orderBy == null">
			order by t.id 
		</if>
		<if test="order == true">
			DESC
		</if>
		<if test="order == false">
			ASC
		</if>
		<if test="size != 0">
			limit #{offset},#{size}
		</if>
	</select>

	<select id="getTotalByCond" resultType="java.lang.Long">
		select COUNT(*)
		from order_ticket t, order_scenic_spot s
		where t.scenicId = s.id	
		<if test="goodsCode != null and goodsCode != ''">
			and goodsCode = #{goodsCode}
		</if>
		<if test="status > -1">
			and status = #{status}
		</if>
		<if test="ticketName != null and ticketName != ''">
			and t.name like '%${ticketName}%'
		</if>
		<if test="scenicName != null and scenicName != ''">
			and s.name like '%${scenicName}%'
		</if>
	</select>

	<select id="findPageByGroup" resultMap="resultMap">
		select * from order_ticket
		where 
		groupId = #{groupId}
		order by ${orderBy} 
		<if test="order == true">
			DESC
		</if>
		<if test="order == false">
			ASC
		</if>
		<if test="size != 0">
			limit #{offset},#{size}
		</if>
	</select>

	<select id="getTotalByGroup" resultType="java.lang.Long">
		select COUNT(*) from order_ticket
		where 
		groupId = #{groupId}
	</select>

</mapper>